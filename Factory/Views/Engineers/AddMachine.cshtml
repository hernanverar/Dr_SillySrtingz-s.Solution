@{
  Layout = "_Layout";
}
@model Factory.Models.Engineer

<h2>Add a certified Machine</h2>

<h4>@Html.DisplayFor(model => model.Name)</h4>


@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select Machine")
  <br>
  @Html.DropDownList("MachineId")
  <br>
  <input type="submit" value="Add task"/>
}

<hr />
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
<p>@Html.ActionLink("Back to Engineers List", "Index")</p>
<p>@Html.ActionLink("See all Machines", "Index", "Machines")</p>